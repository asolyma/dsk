generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
 model User {
   id String @id @default(uuid())
   firstname String 
   lastname String
   email String @unique
   password String
   phonenumber String
   avatar String?
   Checkins Chekin[]
   Checkouts Checkout[]
 }
 model Chekin {
   id Int @id @default(autoincrement())
   user User @relation(fields: [userId],references: [id])
   timestamp DateTime
   userId String

 }
  model Checkout {
   id Int @id @default(autoincrement())
   user User @relation(fields: [userId],references: [id])
   timestamp DateTime
   userId String

 }
